{% extends 'base.html.twig' %}

{% block title %}{{ 'map.title'|trans }} - e-CO Web{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Load OrienteeringApp directly as a script to ensure it's available #}
    {# Cache busting to force reload of app.js #}
    <script src="{{ asset('assets/js/app.js') }}?v={{ 'now'|date('U') }}"></script>
{% endblock %}

{% block body %}
<div class="container">
    <header class="header">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h1>üß≠ {{ 'map.title'|trans }}</h1>
                <p>{{ 'map.subtitle'|trans }}</p>
            </div>
            <div style="display: flex; gap: 0.5rem;">
                <a href="{{ path('app_parcours_list') }}" class="btn btn-info">üóÇÔ∏è {{ 'map.manage'|trans }}</a>
                <a href="{{ path('app_home') }}" class="btn btn-secondary">üè† {{ 'map.home'|trans }}</a>
            </div>
        </div>
    </header>

    <div class="toolbar">
        <div class="toolbar-section">
            <button id="refreshBtn" class="btn btn-secondary">üîÑ {{ 'map.refresh'|trans }}</button>
        </div>
        <div class="toolbar-section">
            <button id="toggleBoundaryFillBtn" class="btn btn-warning" style="display: none;" data-hide-text="{{ 'map.hide_fill'|trans }}" data-show-text="{{ 'map.show_fill'|trans }}">&#x1F3A8; {{ 'map.hide_fill'|trans }}</button>
        </div>
        <div class="toolbar-section">
            <span id="courseNameDisplay" class="course-name-display">{{ 'map.no_course_selected'|trans }}</span>
        </div>
    </div>

    <div class="main-content">
        <div class="map-container">
            <div id="map"></div>
            <div class="map-info">
                <p><strong>üìñ {{ 'map.guide.title'|trans }}</strong></p>
                <ul style="margin: 0.5rem 0; padding-left: 1.5rem; font-size: 0.85rem; line-height: 1.6;">
                    <li>{{ 'map.guide.load_course'|trans }}</li>
                    <li>{{ 'map.guide.view_coords'|trans }}</li>
                    <li>{{ 'map.guide.point_details'|trans }}</li>
                    <li>{{ 'map.guide.statistics'|trans }}</li>
                </ul>
                <div style="margin-top: 0.5rem; display: flex; align-items: center; gap: 0.5rem; padding-top: 0.5rem; border-top: 1px solid #ddd;">
                    <p id="coordinatesDisplay" style="margin: 0; flex: 1; font-size: 0.85rem;">{{ 'map.guide.click_coords'|trans }}</p>
                    <button id="copyCoordinatesBtn" class="btn btn-info" style="padding: 0.3rem 0.6rem; font-size: 0.8rem; display: none;" title="{{ 'map.guide.copy_coords'|trans }}">üìã</button>
                </div>
            </div>
        </div>

        <div class="sidebar">
            <div class="control-points-panel">
                <h3>{{ 'map.control_points.title'|trans }}</h3>
                <div id="pointsList" class="points-list">
                    <p class="no-points">{{ 'map.control_points.no_course'|trans }}</p>
                </div>
                <div class="course-stats">
                    <p>{{ 'map.control_points.total_points'|trans }}: <span id="totalPoints">0</span></p>
                    <p>{{ 'map.control_points.distance'|trans }}: <span id="courseDistance">0 km</span></p>
                </div>
            </div>

            <div class="saved-courses-panel">
                <h3>{{ 'map.available_courses.title'|trans }}</h3>
                <div id="savedCoursesList" class="saved-courses-list">
                    <p class="no-courses">{{ 'map.available_courses.no_courses'|trans }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="pointModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h3>{{ 'map.modal.control_point_details'|trans }}</h3>
        <form id="pointForm">
            <div class="form-group">
                <label for="pointName">{{ 'map.modal.point_name'|trans }}:</label>
                <input type="text" id="pointName" placeholder="{{ 'map.modal.point_name_placeholder'|trans }}" required>
            </div>
            <div class="form-group">
                <label for="pointDescription">{{ 'map.modal.description'|trans }}:</label>
                <textarea id="pointDescription" placeholder="{{ 'map.modal.description_placeholder'|trans }}"></textarea>
            </div>
            <div class="form-group">
                <label for="pointType">{{ 'map.modal.point_type'|trans }}:</label>
                <select id="pointType">
                    <option value="start">{{ 'map.modal.start'|trans }}</option>
                    <option value="control">{{ 'map.modal.control_point'|trans }}</option>
                    <option value="finish">{{ 'map.modal.finish'|trans }}</option>
                </select>
            </div>
            <div class="coordinates-info">
                <p>{{ 'map.modal.latitude'|trans }}: <span id="pointLat"></span></p>
                <p>{{ 'map.modal.longitude'|trans }}: <span id="pointLng"></span></p>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">{{ 'map.modal.save_point'|trans }}</button>
                <button type="button" class="btn btn-secondary" id="cancelPoint">{{ 'map.modal.cancel'|trans }}</button>
            </div>
        </form>
    </div>
</div>

<!-- Load app.js at the end of body for proper initialization -->
<script src="{{ asset('assets/js/app.js') }}"></script>
<script>
    // Initialize immediately after app.js is loaded
    (function() {
        console.log('[Map Page] Script loaded, checking if on map page...');
        
        // Wait for DOM to be fully loaded
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initMapPage);
        } else {
            initMapPage();
        }
        
        function initMapPage() {
            const mapElement = document.getElementById('map');
            if (!mapElement) {
                console.log('[Map Page] Not on map page, skipping initialization');
                return;
            }
            
            console.log('[Map Page] Initializing...');
            
            // Set explicit dimensions on map element
            mapElement.style.width = '100%';
            mapElement.style.height = '100%';
            
            // Initialize app
            if (typeof OrienteeringApp === 'undefined') {
                console.error('[Map Page] OrienteeringApp not defined!');
                return;
            }
            
            async function start() {
                try {
                    // Create and initialize app (this loads config)
                    // Always create a fresh instance for the map page
                    console.log('[Map Page] Creating app instance');
                    window.app = new OrienteeringApp();
                    console.log('[Map Page] Calling init()...');
                    await window.app.init();
                    console.log('[Map Page] App initialized, config:', window.app.config);
                    
                    // Config should always be available (either loaded or fallback)
                    if (!window.app.config) {
                        console.error('[Map Page] CRITICAL: Config is null after init!');
                        // This should never happen since loadConfiguration sets fallback
                        // But let's set it here just in case
                        window.app.config = {
                            defaultLocation: { lat: 45.5017, lng: -73.5673 },
                            defaultZoom: 15,
                            defaultMapType: 'hybrid'
                        };
                    }
                    
                    console.log('[Map Page] App ready with config:', window.app.config.defaultLocation);
                    
                    // Load available courses
                    loadAvailableCourses();
                    
                    // Check if Google Maps is loaded
                    if (window.google && window.google.maps) {
                        console.log('[Map Page] Google Maps already loaded');
                        window.app.initializeMap();
                        // Check for sessionId URL parameter
                        checkAndLoadSession();
                    } else {
                        console.log('[Map Page] Loading Google Maps API...');
                        loadGoogleMapsAPI();
                    }
                } catch (error) {
                    console.error('[Map Page] Initialization error:', error);
                }
            }
            
            async function loadAvailableCourses() {
                try {
                    const response = await fetch('/api/parcours');
                    const data = await response.json();
                    const courses = data.courses || [];
                    
                    const locale = document.documentElement.lang || 'fr';
                    const listContainer = document.getElementById('savedCoursesList');
                    if (courses.length === 0) {
                        listContainer.innerHTML = `<p class="no-courses">${translations.get('map.available_courses.no_courses', locale)}</p>`;
                        return;
                    }
                    
                    const beaconsText = translations.get('map.available_courses.beacons', locale);
                    const finishedText = translations.get('map.available_courses.finished', locale);
                    
                    listContainer.innerHTML = courses.map(course => `
                        <div class="course-list-item" onclick="loadCourseOnMap(${course.id})">
                            <div class="course-item-header">
                                <strong>${course.name}</strong>
                                ${course.status === 'finished' ? `<span class="badge-finished">‚úì ${finishedText}</span>` : ''}
                            </div>
                            <div class="course-item-meta">
                                <span>üìç ${(course.waypoints || []).length} ${beaconsText}</span>
                                <span>‚è±Ô∏è ${new Date(course.createdAt).toLocaleDateString(locale)}</span>
                            </div>
                        </div>
                    `).join('');
                    
                    window.availableCourses = courses;
                } catch (error) {
                    console.error('Error loading courses:', error);
                    const locale = document.documentElement.lang || 'fr';
                    document.getElementById('savedCoursesList').innerHTML = `<p class="no-courses" style="color: #d32f2f;">${translations.get('parcours.error_loading', locale)}</p>`;
                }
            }
            
            window.loadCourseOnMap = function(courseId) {
                const course = window.availableCourses?.find(c => c.id === courseId);
                if (!course) {
                    console.error('Course not found:', courseId);
                    return;
                }
                
                console.log('[DEBUG] Course data:', course);
                console.log('[DEBUG] Start beacon:', course.startBeacon);
                console.log('[DEBUG] Finish beacon:', course.finishBeacon);
                console.log('[DEBUG] Waypoints:', course.waypoints);
                
                // Clear existing markers
                if (window.app && window.app.map) {
                    // Clear old markers/polygons/labels if they exist
                    if (window.courseMarkers) {
                        window.courseMarkers.forEach(m => m.setMap(null));
                    }
                    if (window.courseLabels) {
                        window.courseLabels.forEach(l => l.setMap(null));
                    }
                    if (window.coursePolygon) {
                        window.coursePolygon.setMap(null);
                    }
                    
                    window.courseMarkers = [];
                    window.courseLabels = [];
                    const bounds = new google.maps.LatLngBounds();
                    
                    // Calculate automatic boundary from farthest beacons
                    // Will be drawn after all beacons are processed
                    
                    // Find extreme points for boundary calculation
                    let northmost = null, southmost = null, eastmost = null, westmost = null;
                    
                    console.log('[BEACON DEBUG] About to render beacons');
                    console.log('[BEACON DEBUG] Start beacon data:', course.startBeacon);
                    console.log('[BEACON DEBUG] Finish beacon data:', course.finishBeacon);
                    console.log('[BEACON DEBUG] Waypoints count:', course.waypoints?.length);
                    
                    // Add start beacon if exists
                    if (course.startBeacon && course.startBeacon.lat && course.startBeacon.lng) {
                        console.log('[BEACON DEBUG] Rendering start beacon at:', course.startBeacon.lat, course.startBeacon.lng);
                            const startLat = parseFloat(course.startBeacon.lat);
                            const startLng = parseFloat(course.startBeacon.lng);
                            
                            if (!northmost || startLat > northmost.lat) northmost = {lat: startLat, lng: startLng};
                            if (!southmost || startLat < southmost.lat) southmost = {lat: startLat, lng: startLng};
                            if (!eastmost || startLng > eastmost.lng) eastmost = {lat: startLat, lng: startLng};
                            if (!westmost || startLng < westmost.lng) westmost = {lat: startLat, lng: startLng};
                            
                            const startMarker = new google.maps.Marker({
                                position: { lat: startLat, lng: startLng },
                                map: window.app.map,
                                title: 'üü¢ ' + (course.startBeacon.name || 'D√©part'),
                                icon: {
                                    path: 'M 0,0 C -2,-20 -10,-22 -10,-30 A 10,10 0 1,1 10,-30 C 10,-22 2,-20 0,0 z',
                                    fillColor: '#4CAF50', // Green for start
                                    fillOpacity: 1,
                                    strokeColor: '#ffffff',
                                    strokeWeight: 2,
                                    scale: 1.3, // Larger for visibility
                                    anchor: new google.maps.Point(0, 0)
                                }
                            });
                            window.courseMarkers.push(startMarker);
                        }

                        // Add finish beacon if exists and different from start
                        if (course.finishBeacon && course.finishBeacon.lat && course.finishBeacon.lng && 
                            (!course.startBeacon || course.finishBeacon.id !== course.startBeacon.id)) {
                            const finishLat = parseFloat(course.finishBeacon.lat);
                            const finishLng = parseFloat(course.finishBeacon.lng);
                            
                            if (!northmost || finishLat > northmost.lat) northmost = {lat: finishLat, lng: finishLng};
                            if (!southmost || finishLat < southmost.lat) southmost = {lat: finishLat, lng: finishLng};
                            if (!eastmost || finishLng > eastmost.lng) eastmost = {lat: finishLat, lng: finishLng};
                            if (!westmost || finishLng < westmost.lng) westmost = {lat: finishLat, lng: finishLng};
                            
                            const finishMarker = new google.maps.Marker({
                                position: { lat: finishLat, lng: finishLng },
                                map: window.app.map,
                                title: 'üî¥ ' + (course.finishBeacon.name || 'Arriv√©e'),
                                icon: {
                                    path: 'M 0,0 C -2,-20 -10,-22 -10,-30 A 10,10 0 1,1 10,-30 C 10,-22 2,-20 0,0 z',
                                    fillColor: '#F44336', // Red for finish
                                    fillOpacity: 1,
                                    strokeColor: '#ffffff',
                                    strokeWeight: 2,
                                    scale: 1.3, // Larger for visibility
                                    anchor: new google.maps.Point(0, 0)
                                }
                            });
                            window.courseMarkers.push(finishMarker);
                    }
                    
                    // Display control waypoints
                    if (course.waypoints && course.waypoints.length > 0) {
                        course.waypoints.forEach((waypoint, idx) => {
                            if (waypoint.lat && waypoint.lng) {
                                const lat = parseFloat(waypoint.lat);
                                const lng = parseFloat(waypoint.lng);
                                
                                // Track extreme points
                                if (!northmost || lat > northmost.lat) northmost = {lat, lng};
                                if (!southmost || lat < southmost.lat) southmost = {lat, lng};
                                if (!eastmost || lng > eastmost.lng) eastmost = {lat, lng};
                                if (!westmost || lng < westmost.lng) westmost = {lat, lng};
                                
                                // Create marker without label
                                const marker = new google.maps.Marker({
                                    position: { lat, lng },
                                    map: window.app.map,
                                    title: waypoint.name || `Balise ${idx + 1}`,
                                    icon: {
                                        path: 'M 0,0 C -2,-20 -10,-22 -10,-30 A 10,10 0 1,1 10,-30 C 10,-22 2,-20 0,0 z',
                                        fillColor: '#2196F3',
                                        fillOpacity: 1,
                                        strokeColor: '#ffffff',
                                        strokeWeight: 2,
                                        scale: 1,
                                        anchor: new google.maps.Point(0, 0)
                                    }
                                });
                                
                                // Create custom label overlay with stroke/outline
                                const labelText = waypoint.name || `Balise ${idx + 1}`;
                                const labelDiv = document.createElement('div');
                                labelDiv.style.position = 'absolute';
                                labelDiv.style.fontSize = '14px';
                                labelDiv.style.fontWeight = 'bold';
                                labelDiv.style.color = '#2196F3';
                                labelDiv.style.textShadow = `
                                    -2px -2px 0 #fff,  
                                    2px -2px 0 #fff,
                                    -2px 2px 0 #fff,
                                    2px 2px 0 #fff,
                                    -2px 0 0 #fff,
                                    2px 0 0 #fff,
                                    0 -2px 0 #fff,
                                    0 2px 0 #fff
                                `;
                                labelDiv.style.whiteSpace = 'nowrap';
                                labelDiv.style.transform = 'translate(-50%, -45px)';
                                labelDiv.style.pointerEvents = 'none';
                                labelDiv.style.userSelect = 'none';
                                labelDiv.style.zIndex = '1000';
                                labelDiv.textContent = labelText;
                                
                                // Custom overlay class for label
                                class LabelOverlay extends google.maps.OverlayView {
                                    constructor(position, labelElement) {
                                        super();
                                        this.position = position;
                                        this.labelElement = labelElement;
                                    }
                                    
                                    onAdd() {
                                        const panes = this.getPanes();
                                        panes.overlayMouseTarget.appendChild(this.labelElement);
                                    }
                                    
                                    draw() {
                                        const projection = this.getProjection();
                                        const point = projection.fromLatLngToDivPixel(this.position);
                                        if (point) {
                                            this.labelElement.style.left = point.x + 'px';
                                            this.labelElement.style.top = point.y + 'px';
                                        }
                                    }
                                    
                                    onRemove() {
                                        if (this.labelElement.parentElement) {
                                            this.labelElement.parentElement.removeChild(this.labelElement);
                                        }
                                    }
                                }
                                
                                const labelOverlay = new LabelOverlay(
                                    new google.maps.LatLng(lat, lng),
                                    labelDiv
                                );
                                labelOverlay.setMap(window.app.map);
                                
                                window.courseMarkers.push(marker);
                                window.courseLabels.push(labelOverlay);
                                bounds.extend({ lat, lng });
                            }
                        });
                    }
                    
                    // Boundaries are no longer displayed
                    // Extreme points are still tracked for potential future use
                    
                    // Fit map to show all markers
                    if (!bounds.isEmpty()) {
                        window.app.map.fitBounds(bounds);
                    }
                    
                    // Update UI
                    document.getElementById('courseNameDisplay').textContent = course.name;
                }
            }
            
            function loadGoogleMapsAPI() {
                if (window.googleMapsLoading) {
                    console.log('[Map Page] Google Maps already loading...');
                    return;
                }
                
                window.googleMapsLoading = true;
                
                // Global callback for Google Maps - MUST check if app and config are ready
                window.initMap = function() {
                    console.log('[Map Page] Google Maps callback triggered');
                    window.googleMapsLoading = false;
                    
                    // Wait for app and config to be ready
                    if (!window.app || !window.app.config) {
                        console.log('[Map Page] App/config not ready yet, waiting...');
                        setTimeout(window.initMap, 100);
                        return;
                    }
                    
                    if (window.app.initializeMap) {
                        console.log('[Map Page] Initializing map now');
                        window.app.initializeMap();
                        // Check for sessionId URL parameter after map initialization
                        checkAndLoadSession();
                    } else {
                        console.error('[Map Page] initializeMap method not found!');
                    }
                };
                
                const script = document.createElement('script');
                script.src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBi8sXKGGafzB837kvxraWuqohlZ-JJRu8&libraries=geometry,places&callback=initMap';
                script.async = true;
                script.defer = true;
                script.onerror = function() {
                    console.error('[Map Page] Failed to load Google Maps API');
                    window.googleMapsLoading = false;
                };
                document.head.appendChild(script);
            }
            
            // Function to check URL parameters and load session if present
            async function checkAndLoadSession() {
                const urlParams = new URLSearchParams(window.location.search);
                const sessionId = urlParams.get('sessionId');
                
                if (sessionId) {
                    console.log('[Map Page] SessionId detected in URL:', sessionId);
                    // Wait a bit for the map to be fully initialized
                    setTimeout(() => loadSessionOnMap(sessionId), 500);
                } else {
                    console.log('[Map Page] No sessionId in URL');
                }
            }
            
            // Function to load a session on the map by ID
            async function loadSessionOnMap(sessionId) {
                try {
                    console.log('[Map Page] Loading session:', sessionId);
                    
                    // Fetch session details from API
                    const response = await fetch(`/api/sessions/${sessionId}`);
                    if (!response.ok) {
                        throw new Error(`Failed to load session: ${response.status}`);
                    }
                    
                    const session = await response.json();
                    console.log('[Map Page] Session loaded:', session);
                    
                    if (!session || !session.course) {
                        console.error('[Map Page] Session has no associated course (parcours)');
                        alert('Cette course n\'a pas de parcours associ√©.');
                        return;
                    }
                    
                    // Get the associated course (parcours)
                    const courseId = session.course.id || session.course;
                    console.log('[Map Page] Loading parcours:', courseId);
                    
                    // Load the parcours on the map using existing function
                    if (window.loadCourseOnMap) {
                        // Make sure availableCourses is loaded
                        if (!window.availableCourses || window.availableCourses.length === 0) {
                            await loadAvailableCourses();
                        }
                        window.loadCourseOnMap(courseId);
                        
                        // Update course name display to show session name
                        const courseNameDisplay = document.getElementById('courseNameDisplay');
                        if (courseNameDisplay) {
                            courseNameDisplay.textContent = `üìç Session: ${session.name}`;
                        }
                    } else {
                        console.error('[Map Page] loadCourseOnMap function not found');
                    }
                } catch (error) {
                    console.error('[Map Page] Error loading session:', error);
                    alert('Erreur lors du chargement de la session: ' + error.message);
                }
            }
            
            start();
        }
    })();
</script>
{% endblock %}