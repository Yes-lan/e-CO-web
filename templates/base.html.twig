<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}e-CO Web - Cr√©ateur de Parcours d'Orientation{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üß≠</text></svg>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css" />
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    <script src="{{ asset('assets/js/auth.js') }}"></script>
    <script src="{{ asset('assets/js/translations.js') }}"></script>
    <script>
        // Set document language for translation helper
        document.documentElement.lang = '{{ app.request.locale }}';

        // Load languages from database API
        async function loadLanguages() {
            try {
                // Use regular fetch on public pages, AuthManager.fetch on authenticated pages
                const isPublicPage = window.location.pathname === '/login' || 
                                     window.location.pathname === '/register' ||
                                     window.location.pathname.startsWith('/reset-password');
                const fetchMethod = isPublicPage ? fetch : (AuthManager ? AuthManager.fetch : fetch);
                const response = await fetchMethod('/api/languages');
                const data = await response.json();
                const languages = data.languages || [];
                
                const currentLocale = '{{ app.request.locale }}';
                const dropdownMenu = document.getElementById('languageDropdownMenu');
                const currentLanguageFlag = document.getElementById('currentLanguageFlag');
                const currentLanguageText = document.getElementById('currentLanguageText');
                
                if (dropdownMenu && languages.length > 0) {
                    // Update current language display
                    const currentLang = languages.find(l => l.code === currentLocale);
                    if (currentLang) {
                        currentLanguageFlag.innerHTML = `<span class="fi fi-${currentLang.flagIcon}"></span>`;
                        currentLanguageText.textContent = currentLang.displayedText;
                    }
                    
                    // Populate dropdown
                    dropdownMenu.innerHTML = languages.map(lang => `
                        <button class="language-dropdown-item ${lang.code === currentLocale ? 'active' : ''}" 
                                onclick="changeLanguage('${lang.code}')">
                            <span class="language-flag"><span class="fi fi-${lang.flagIcon}"></span></span>
                            <span class="language-name">${lang.displayedText}</span>
                        </button>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading languages:', error);
            }
        }

        function changeLanguage(locale) {
            // Store locale preference in localStorage
            localStorage.setItem('locale', locale);
            // Reload page with locale query parameter (Symfony LocaleSubscriber will save to session)
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set('_locale', locale);
            window.location.href = currentUrl.toString();
        }
        
        // Toggle dropdown
        document.addEventListener('DOMContentLoaded', function() {
            loadLanguages();
            
            const dropdownBtn = document.getElementById('languageDropdownBtn');
            const dropdownMenu = document.getElementById('languageDropdownMenu');
            
            if (dropdownBtn && dropdownMenu) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    dropdownMenu.classList.toggle('show');
                });
                
                // Close dropdown when clicking outside
                document.addEventListener('click', function() {
                    dropdownMenu.classList.remove('show');
                });
            }
        });
    </script>
</head>
<body>
    {% if app.user %}
    <header class="app-header">
        <div class="header-content">
            <div class="header-logo">
                <svg width="40" height="40" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="100" cy="80" r="35" fill="none" stroke="#1976d2" stroke-width="2"/>
                    <line x1="100" y1="48" x2="100" y2="55" stroke="#1976d2" stroke-width="2"/>
                    <line x1="100" y1="105" x2="100" y2="112" stroke="#1976d2" stroke-width="2"/>
                    <line x1="68" y1="80" x2="75" y2="80" stroke="#1976d2" stroke-width="2"/>
                    <line x1="125" y1="80" x2="132" y2="80" stroke="#1976d2" stroke-width="2"/>
                    <polygon points="100,60 95,80 100,100 105,80" fill="#c62828"/>
                    <polygon points="100,60 95,80 100,100 105,80" fill="#1976d2" opacity="0.5"/>
                    <circle cx="100" cy="80" r="5" fill="#333"/>
                    <rect x="70" y="130" width="60" height="8" rx="2" fill="#1976d2"/>
                    <rect x="75" y="138" width="4" height="30" fill="#1976d2"/>
                    <rect x="121" y="138" width="4" height="30" fill="#1976d2"/>
                    <rect x="70" y="163" width="60" height="5" rx="2" fill="#1976d2"/>
                </svg>
                <span class="app-title">e-CO</span>
            </div>

            <nav class="header-nav">
                <a href="{{ path('app_courses_list') }}" class="nav-link {% if app.request.attributes.get('_route') starts with 'app_courses' %}active{% endif %}">{{ 'nav.courses'|trans }}</a>
                <a href="{{ path('app_parcours_list') }}" class="nav-link {% if app.request.attributes.get('_route') starts with 'app_parcours' %}active{% endif %}">{{ 'nav.parcours'|trans }}</a>
            </nav>

            <div class="header-actions">
                <div class="language-switcher">
                    <button class="language-dropdown-btn" id="languageDropdownBtn">
                        <span id="currentLanguageFlag">üåê</span>
                        <span id="currentLanguageText">{{ app.request.locale|upper }}</span>
                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                    <div class="language-dropdown-menu" id="languageDropdownMenu">
                        <!-- Languages will be loaded dynamically from API -->
                    </div>
                </div>
                <div class="user-info">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="8" r="4" stroke="#1976d2" stroke-width="2"/>
                        <path d="M5 20c0-4 3-7 7-7s7 3 7 7" stroke="#1976d2" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    <span>{{ app.user.email|split('@')[0]|title }}</span>
                </div>
                <a href="{{ path('app_logout') }}" class="btn-logout">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke="white" stroke-width="2" stroke-linecap="round"/>
                        <path d="M16 17l5-5-5-5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M21 12H9" stroke="white" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    {{ 'header.logout'|trans }}
                </a>
            </div>
        </div>
    </header>
    {% endif %}

    {% block body %}{% endblock %}
</body>
</html>
